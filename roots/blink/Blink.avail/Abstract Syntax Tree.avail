Method "“_”" is
[
	stmt : signal declaration statement
|
	try
	[
		sig ::= stmt's signal;
		format "‘①’ (‘②’)" with
			(a|an) “stmt's type's names→tuple[1]”,
			stmt's signal's name
	]
	else [“(stmt :: any)”]
];

