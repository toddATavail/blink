Public "handled event" is a new field atom;
Public "fired signal" is a new field atom;

/**
 * A {@type "hardware event handler statement"} establishes that a particular
 * {@type "hardware event"} will fire a specific {@type "signal"}.
 *
 * @type "hardware event handler statement"
 * @supertype "abstract statement"
 * @field "statement scope" "global's type"
 *        A {@type "hardware event handler statement"} is always {@type
 *        "global"}.
 * @field "handled event" "hardware event"
 *        The {@type "hardware event"} handled by the {@type
 *        "hardware event handler statement"}.
 * @field "fired signal" "signal"
 *        The {@type "signal"} that is automatically fired upon receipt of the
 *        {@type "hardware event"}.
 */
Public class "hardware event handler statement" extends abstract statement
	with field
		public statement scope : global's type ("_'s⁇scope"),
		public handled event : hardware event ("_'s⁇event"),
		public fired signal : signal ("_'s⁇signal");

Public method "_'s⁇subexpressions" is
	[expr : hardware event handler statement | <>];

Method "“_”" is
[
	stmt : hardware event handler statement
|
	try
	[
		format "‘①’ (‘②’ → ‘③’)" with
			(a|an) “stmt's type's names→tuple[1]”,
			stmt's event's name,
			stmt's signal's name
	]
	else [“(stmt :: any)”]
];

